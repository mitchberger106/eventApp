<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        android:background="#d3d3d3">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@mipmap/ic_party"
            android:id="@+id/imageView2" />
        <TextView
            android:id="@+id/partyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Banger"
            android:textColor="@color/QRCodeBlackColor"
            android:textSize="50dp"
            android:layout_alignTop="@+id/imageView2"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/tView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan Guest"

            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imageView2"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@mipmap/ic_scanner"
            android:layout_below="@id/tView"
            android:id="@+id/scanner"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:background="#d3d3d3"
        android:weightSum="3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3"
                android:text="Event Info"
                android:textSize="25dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="1.3"
                android:background="@mipmap/ic_event_black_24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3"
                android:text="Guest List"
                android:textSize="25dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="1.3"
                android:background="@mipmap/ic_people_black_24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3"
                android:text="Location"
                android:textSize="25dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="1.3"
                android:background="@mipmap/ic_location_on_black_24dp"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>