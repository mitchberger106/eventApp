<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="mrb.partyapp">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".SearchViewActivity"
            android:noHistory="true">
        </activity>
        <activity android:name=".PartyInputActivity"
            android:noHistory="true">
        </activity>
        <activity android:name=".NavbarActivity">
        </activity>
        <activity android:name=".GuestListActivity"></activity>
        <activity android:name=".PartyInfoActivity"></activity>
        <activity android:name=".BarcodeGenerator"></activity>
        <activity android:name=".SignupActivity"></activity>
        <activity android:name=".LoginActivity">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".ProfileActivity"></activity>
        <activity android:name=".ResetPasswordActivity"></activity>

    </application>

</manifest>